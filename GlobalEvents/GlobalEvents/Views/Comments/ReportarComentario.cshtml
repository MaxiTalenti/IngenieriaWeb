@model RepositorioClases.CommentsReportes

@{
    ViewBag.Title = "ReportarComentario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="input-field col s3"></div>
    <div class="input-field col s6 ">
        <div class="card">
            <div class="card-title center-align">¿Por qué lo reportas?</div>
            <div class="center-align">Mientras más específico seas, más nos ayudará a entender el reporte.</div>
            <div class="card-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.CommentId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CommentId, "", new { @class = "text-danger" })

                        <div class="input-field">
                            @Html.TextAreaFor(model => model.Observacion, new { @class = "materialize-textarea", @data_length = "500" })
                            @Html.LabelFor(model => model.Observacion)
                            @Html.ValidationMessageFor(model => model.Observacion, "", new { @class = "validate" })
                        </div>

                        <script>$('#Descripcion').trigger('autoresize');</script>

                        <br />
                        <div class="form-group center-align">
                            <input type="submit" value="Enviar Reporte" class="btn btn-default red" />
                        </div>
                    </div>
                }
                <div>
                    @Html.ActionLink("Volver", "Index")
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
