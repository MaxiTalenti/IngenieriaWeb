@model ViewModels.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-content">
        @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "bootstrap-admin-login-form", id = "loginForm" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="input-field">
                    <i class="material-icons prefix">perm_identity</i>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="input-field">
                    <i class="material-icons prefix">vpn_key</i>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.CheckBoxFor(m => m.Recordarme)
                    <label for="Destacado">Recordarme</label>
                </div>

                <!--Script para los checkbox-->
                <script>
                    $(document).ready(function () {
                        $('input[type=checkbox]').each(function () {
                            if (this.nextSibling.nodeName != 'label') {
                                $(this).after('<label for="' + this.id + '"></label>')
                            }
                        })
                    })</script>

                <br />

                <div class="row">
                    <div class="form-group">
                        <div class="input-field col s6">
                            <input type="submit" value="Ingresar" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="input-field col s6 right-align">
                        <input type="button" value="Crearse una cuenta" class="btn btn-primary blue" onclick="location.href='@Url.Action("Create", "Users")'" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
