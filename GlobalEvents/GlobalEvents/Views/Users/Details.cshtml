@model ViewModels.ListUserViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="card">
    <div class="card-content">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Id)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Id)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Usuario)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Usuario)
                </p>
            </div>

            @if (Model.Name != null)
            {
                <label class="col-sm-2 col-form-label">
                    @Html.DisplayNameFor(model => model.Name)
                </label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.Name)
                    </p>
                </div>
            }

            @if (Model.Apellido != null)
            {
                <label class="col-sm-2 col-form-label">
                    @Html.DisplayNameFor(model => model.Apellido)
                </label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.Apellido)
                    </p>
                </div>
            }

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Email)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Email)
                </p>
            </div>

            <br />

            <div class="fixed-action-btn">
                <a class="btn-floating btn-large green" href="~/Users/Edit/@Model.Id">
                    <i class="large material-icons">mode_edit</i>
                </a>
            </div>
            @if (Model.Id == WebSecurity.CurrentUserId)
            {
                <div class="left-align">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.Id })
                </div>
            }
            <div class="right-align">
                <i class="fa fa-flag-o"></i>
                @Html.ActionLink("Reportar", "ReportarUsuario", new { id = Model.Id })
            </div>

            <br />
            <div>
                
                @Html.ActionLink("Volver a usuarios", "Listado")
            </div>
        </div>
        </div>
</div>