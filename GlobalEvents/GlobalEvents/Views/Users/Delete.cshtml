@model RepositorioClases.Users

@{
    ViewBag.Title = "Eliminar usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>¿Esta seguro que desea eliminar este usuario?</h4>
<div class="form-group row">
    <label class="col-sm-2 col-form-label">
        @Html.DisplayNameFor(model => model.Id)
    </label>
    <div class="col-sm-10">
        <p class="form-control-static">
            @Html.DisplayFor(model => model.Id)
        </p>
    </div>

    <label class="col-sm-2 col-form-label">
        @Html.DisplayNameFor(model => model.Usuario)
    </label>
    <div class="col-sm-10">
        <p class="form-control-static">
            @Html.DisplayFor(model => model.Usuario)
        </p>
    </div>

    @if (Model.Nombre != null)
    {
        <label class="col-sm-2 col-form-label">
            @Html.DisplayNameFor(model => model.Nombre)
        </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Nombre)
                </p>
            </div>
    }

    @if (Model.Apellido != null)
    {
        <label class="col-sm-2 col-form-label">
            @Html.DisplayNameFor(model => model.Apellido)
        </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Apellido)
                </p>
            </div>
    }

    <label class="col-sm-2 col-form-label">
        @Html.DisplayNameFor(model => model.Email)
    </label>
    <div class="col-sm-10">
        <p class="form-control-static">
            @Html.DisplayFor(model => model.Email)
        </p>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Eliminar" class="btn btn-primary" />
        </div>
    }
</div>
<div>@Html.ActionLink("Volver a usuarios", "Index")</div>
