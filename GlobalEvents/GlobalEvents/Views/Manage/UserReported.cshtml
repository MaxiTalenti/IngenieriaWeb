@model RepositorioClases.UsersDetailReport
@{
    ViewBag.Title = "UserReported";
}


<br />
<br />

<div class="card">
    <div class="card-content">
        <div class="card-title">Usuario reportado</div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Usuarios.Id)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Usuarios.Id)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Usuarios.Nombre)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Usuarios.Nombre)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Usuarios.Apellido)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Usuarios.Apellido)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Usuarios.Email)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Usuarios.Email)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Usuarios.Usuario)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Usuarios.Usuario)
                </p>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Usuarios.Id)

                <label class="col-sm-2 col-form-label">
                    @Html.DisplayNameFor(model => model.Usuarios.Estado)
                </label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.Usuarios.Estado)
                    </p>
                </div>

                <label class="col-sm-2 col-form-label">
                    @Html.DisplayNameFor(model => model.Usuarios.Estado)
                </label>
                @Html.EnumDropDownListFor(model => model.Usuarios.Estado)

                <script>
                    $(document).ready(function () {
                        $('select').material_select();
                    });</script>

                    <div class="row">
                        <div class="form-group">
                            <div class="input-field col s6">
                                <input type="submit" value="Actualizar estado" class="btn btn-primary" />
                            </div>
                        </div>
                        <div class="input-field col s6 right-align">
                            <input type="button" value="Cerrar caso" class="btn btn-primary red" onclick="location.href='@Url.Action("CerrarReporteUsuario", "Manage", new { @UserId = Model.Usuarios.Id })'" />
                        </div>
                    </div>
            }
        </div>
        <div>
            @Html.ActionLink("Volver", "Reportes")
        </div>
    </div>
</div>

@foreach (var a in Model.Reportes)
{
    <div class="card">
        <div class="card-content red-text">
            @a.Observacion
            <p class="card-text black-text"><small class="text-muted">Creado por @Html.getNameUser(id: @a.IdUsuario.ToString())</small></p>
        </div>
    </div>
}