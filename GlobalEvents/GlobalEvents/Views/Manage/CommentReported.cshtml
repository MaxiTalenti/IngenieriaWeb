@model RepositorioClases.CommentsDetailsReport
@{
    ViewBag.Title = "DetailsReported";
}

<br />
<br />

<div class="card">
    <div class="card-content">
        <div class="card-title">Comentario reportado</div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Comentario.CommentId)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Comentario.CommentId)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Comentario.Comentario)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Comentario.Comentario)
                </p>
            </div>

            @if (Model.Comentario.ComentarioPadre != null)
            {
                <label class="col-sm-2 col-form-label">
                    @Html.DisplayNameFor(model => model.Comentario.ComentarioPadre)
                </label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.Comentario.ComentarioPadre)
                    </p>
                </div>
            }

            @if (Model.Comentario.FechaUltimaActualizacion != null)
            {
                <label class="col-sm-2 col-form-label">
                    @Html.DisplayNameFor(model => model.Comentario.FechaUltimaActualizacion)
                </label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.Comentario.FechaUltimaActualizacion)
                    </p>
                </div>
            }

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Comentario.Fecha)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Comentario.Fecha)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Comentario.EventId)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Comentario.EventId)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Comentario.Fecha)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Comentario.Fecha)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Comentario.iDUsuario)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.getNameUser(id: @Model.Comentario.iDUsuario.ToString())
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Comentario.Like)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Comentario.Like)
                </p>
            </div>

            <label class="col-sm-2 col-form-label">
                @Html.DisplayNameFor(model => model.Comentario.UnLike)
            </label>
            <div class="col-sm-10">
                <p class="form-control-static">
                    @Html.DisplayFor(model => model.Comentario.UnLike)
                </p>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Comentario.CommentId)

                <label class="col-sm-2 col-form-label">
                    @Html.DisplayNameFor(model => model.Comentario.Estado)
                </label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @Html.DisplayFor(model => model.Comentario.Estado)
                    </p>
                </div>

                <label class="col-sm-2 col-form-label">
                    @Html.DisplayNameFor(model => model.Comentario.Estado)
                </label>
                @Html.EnumDropDownListFor(model => model.Comentario.Estado)

                <script>
                    $(document).ready(function () {
                        $('select').material_select();
                    });</script>

                    <div class="row">
                        <div class="form-group">
                            <div class="input-field col s6">
                                <input type="submit" value="Actualizar estado" class="btn btn-primary" />
                            </div>
                        </div>
                        <div class="input-field col s6 right-align">
                            <input type="button" value="Cerrar caso" class="btn btn-primary red" onclick="location.href='@Url.Action("CerrarReporteComentario", "Manage", new { @ComentarioId = Model.Comentario.CommentId })'" />
                        </div>
                    </div>
            }
            </div>
        <div>
            @Html.ActionLink("Volver", "Reportes")
        </div>
    </div>
</div>

@foreach (var a in Model.Reportes)
{
    <div class="card">
        <div class="card-content red-text">
            @a.Observacion
            <p class="card-text black-text"><small class="text-muted">Creado por @Html.getNameUser(id: @a.IdUsuario.ToString())</small></p>
        </div>
    </div>
}