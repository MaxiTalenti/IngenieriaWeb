@model List<RepositorioClases.Events>
@{
    ViewBag.Title = "Gastronomia";
}

<br />
<br />

@if (Model.Count == 0 || Model == null)
{
    <div class="card">
        <div class="card-content">
            <div class="card-title center-align">No se encontraron eventos en esta categoría</div>
        </div>
    </div>
}

    <div class="col s12 m12 l9">
        <div id="card-container" class="row">

            @foreach (var item in Model.OrderBy(z => z.FechaInicio))
            {

                <!-- Col: Card 1 -->
                <div class="col s12 m6 l4">
                    <!-- Card 1 -->
                    @if (item.Destacado)
                    {
                        <div class="card #00897b teal darken-1 hoverable">
                            @if (item.RutaImagen != null)
                            {
                                <div class="card-image">
                                    <img src="@Html.DisplayFor(modelItem => item.RutaImagen)">
                                    <a class="btn-floating halfway-fab waves-effect waves-light grey" href="~/Events/Details/@item.Id"><i class="material-icons">list</i></a>
                                </div>
                            }
                            <div class="card-content white-text">
                                <span class="card-title text-darken-4">@Html.DisplayFor(modelItem => item.NombreEvento)</span>
                                @if (item.Descripcion.Contains(Environment.NewLine))
                                {
                                    <pre><span class="card-subtitle white-text">@Html.Raw(Html.Encode(item.Descripcion))</span></pre>
                                }
                                else
                                {
                                    <p class="card-subtitle white-text">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                                }
                                <p class="card-text"><small class="text-muted">Creado por @Html.getNameUser(id: @Html.DisplayFor(modelItem => item.IdUser).ToString())</small></p>
                                <hr />

                                <div class="row card-row">
                                    <div class="col s12 m12 right-align">
                                        <span class="card-info card-event-detail-info">@Html.DisplayFor(modelItem => item.FechaInicio)  <i class="fa fa-calendar-times-o"></i></span>
                                    </div>
                                </div>
                            </div>

                            @if (item.RutaImagen == null)
                            {
                                <div class="card-action center-align">
                                    <a href="~/Events/Details/@item.Id" class="white-text">Ver evento</a>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="card hoverable">
                            @if (item.RutaImagen != null)
                            {
                                <div class="card-image">
                                    <img src="@Html.DisplayFor(modelItem => item.RutaImagen)">
                                    <a class="btn-floating halfway-fab waves-effect waves-light #00897b" href="~/Events/Details/@item.Id"><i class="material-icons">list</i></a>
                                </div>
                            }

                            <div class="card-content black-text">
                                <span class="card-title grey-text text-darken-4">@Html.DisplayFor(modelItem => item.NombreEvento)</span>
                                @if (item.Descripcion.Contains(Environment.NewLine))
                                {
                                    <pre><span class="card-subtitle grey-text text-darken-2">@Html.Raw(Html.Encode(item.Descripcion))</span></pre>
                                }
                                else
                                {
                                    <p class="card-subtitle grey-text text-darken-2">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                                }
                                <p class="card-text"><small class="text-muted">Creado por @Html.getNameUser(id: @Html.DisplayFor(modelItem => item.IdUser).ToString())</small></p>
                                <hr />

                                <div class="row card-row">
                                    <div class="col s12 m12 right-align">
                                        <span class="card-info card-event-detail-info">@Html.DisplayFor(modelItem => item.FechaInicio)  <i class="fa fa-calendar-times-o"></i></span>
                                    </div>
                                </div>

                            </div>

                            @if (item.RutaImagen == null)
                            {
                                <div class="card-action center-align">
                                    <a href="~/Events/Details/@item.Id" class="green-text">Ver evento</a>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </div>